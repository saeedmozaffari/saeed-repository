<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical" >

        <com.gc.materialdesign.views.Card
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/actionbar" >
        </com.gc.materialdesign.views.Card>

        <TextView
            android:id="@+id/txtWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/view1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="Word"
            android:textColor="@color/white"
            android:textSize="@dimen/nt" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txtVisit"
            android:layout_toRightOf="@+id/txtWord"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/view1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgVisit"
            android:text="1"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imgVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/view1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/imgFav"
            android:src="@drawable/eye" />

        <ImageView
            android:id="@+id/imgFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/view1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:paddingRight="15dp"
            android:src="@drawable/fav_befor" />
    </RelativeLayout>

</LinearLayout>